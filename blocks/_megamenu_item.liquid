<div data-mega-menu-item item-tag="{{ block.settings.tag }}">
  {% content_for 'blocks' %}
</div>

{% schema %}
{
  "name": "Megamenu Item",
  "settings": [
    {
      "type": "text",
      "id": "tag",
      "label": "t:header.megamenu.item.tag",
      "info": "t:header.megamenu.item.tag_info"
    }
  ],
  "blocks": [
    {
      "type": "_megamenu_slider"
    }
  ]
}
{% endschema %}
