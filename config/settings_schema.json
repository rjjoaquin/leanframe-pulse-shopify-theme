[
  {
    "name": "theme_info",
    "theme_name": "LeanFrame Pulse",
    "theme_version": "1.0.0",
    "theme_author": "Shopify",
    "theme_documentation_url": "https://rjwebdeveloper.com/lean-frame-user-documentation",
    "theme_support_url": "https://rjwebdeveloper.com"
  },
  {
    "name": "t:general.typography",
    "settings": [
      {
        "type": "header",
        "content": "t:general.fonts.header_content"
      },
      {
        "type": "font_picker",
        "id": "base_font",
        "default": "work_sans_n4",
        "label": "t:general.fonts.base"
      },
      {
        "type": "font_picker",
        "id": "heading_font",
        "default": "work_sans_n4",
        "label": "t:general.fonts.heading"
      },
      {
        "type": "range",
        "id": "base_font_size",
        "min": 8,
        "max": 28,
        "step": 1,
        "default": 16,
        "unit": "px",
        "label": "t:general.fonts.base_size"
      },
      {
        "type": "range",
        "id": "heading_font_multiplier",
        "min": 1.0,
        "max": 3.0,
        "step": 0.1,
        "default": 1.4,
        "label": "t:general.fonts.heading_multiplier",
        "info": "t:general.fonts.heading_multiplier_info"
      }
    ]
  },
  {
    "name": "t:general.colors.header_content",
    "settings": [
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "default": "scheme-1",
        "label": "t:general.colors.color_scheme"
      },
      {
        "type": "color_scheme_group",
        "id": "color_schemes",
        "definition": [
          {
            "type": "color",
            "id": "background",
            "label": "t:general.colors.background",
            "default": "#FFFFFF"
          },
          {
            "type": "color_background",
            "id": "background_gradient",
            "label": "t:general.colors.background_gradient",
            "info": "t:general.colors.background_gradient_info"
          },
          {
            "type": "color",
            "id": "text",
            "label": "t:general.colors.text",
            "default": "#121212"
          },
          {
            "type": "color",
            "id": "button",
            "label": "t:general.colors.button",
            "default": "#121212"
          },
          {
            "type": "color",
            "id": "button_label",
            "label": "t:general.colors.button_label",
            "default": "#FFFFFF"
          },
          {
            "type": "color",
            "id": "secondary_button_label",
            "label": "t:general.colors.secondary_button_label",
            "default": "#121212"
          },
          {
            "type": "color",
            "id": "shadow",
            "label": "t:general.colors.shadow",
            "default": "#121212"
          }
        ],
        "role": {
          "text": "text",
          "background": {
            "solid": "background",
            "gradient": "background_gradient"
          },
          "links": "secondary_button_label",
          "icons": "text",
          "primary_button": "button",
          "on_primary_button": "button_label",
          "primary_button_border": "button",
          "secondary_button": "background",
          "on_secondary_button": "secondary_button_label",
          "secondary_button_border": "background"
        }
      }
    ]
  },
  {
    "name": "t:general.container.header_content",
    "settings": [
      {
        "type": "select",
        "id": "container_width",
        "options": [
          {
            "value": "max-w-2xl",
            "label": "t:general.container.narrow"
          },
          {
            "value": "max-w-[80%]",
            "label": "t:general.container.regular"
          },
          {
            "value": "max-w-[95%]",
            "label": "t:general.container.wide"
          },
          {
            "value": "max-w-full",
            "label": "t:general.container.full"
          }
        ],
        "label": "t:general.container.label",
        "default": "max-w-[80%]"
      }
    ]
  },

  {
    "name": "t:general.buttons.header_content",
    "settings": [
      {
        "type": "select",
        "id": "button_border_radius",
        "options": [
          {
            "value": "0",
            "label": "t:general.buttons.border_radius.none"
          },
          {
            "value": "0.25rem",
            "label": "t:general.buttons.border_radius.small"
          },
          {
            "value": "0.375rem",
            "label": "t:general.buttons.border_radius.medium"
          },
          {
            "value": "0.75rem",
            "label": "t:general.buttons.border_radius.extra_large"
          },
          {
            "value": "50%",
            "label": "t:general.buttons.border_radius.full"
          }
        ],
        "label": "t:general.buttons.border_radius.label",
        "default": "0.375rem"
      }
    ]
  },
]
