<!doctype html>
<html lang="{{ request.locale.iso_code }}">
  <head>
    {% # Inlined CSS Variables %}
    {% render 'css-variables' %}
    {% # Load and preload the critical CSS %}
    {{ 'output.css' | asset_url | stylesheet_tag: preload: true }}

    {% # Social, title, etc. %}
    {% render 'meta-tags' %}

    {{ content_for_header }}
  </head>

  <body class="font-base bg-(--background-color)">
    {% sections 'header-group' %}

    {{ content_for_layout }}

    {% sections 'footer-group' %}
    <script type="module" src="{{ 'modules.mjs' | asset_url }}" defer></script>
    <script src="{{ 'header.js' | asset_url }}" defer></script>
  </body>
</html>
