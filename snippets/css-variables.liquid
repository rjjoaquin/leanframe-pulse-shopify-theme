{% liquid
  assign heading_font_multiplier = settings.heading_font_multiplier | times: 1.0
  assign heading_one_font_multiplier = settings.heading_font_multiplier | times: 1.0
  assign heading_two_font_multiplier = settings.heading_font_multiplier | times: 1.0
  assign heading_three_font_multiplier = settings.heading_font_multiplier | times: 1.0
  if heading_font_multiplier <= 1.9
    assign heading_one_font_multiplier = heading_one_font_multiplier | plus: 0.2
    assign heading_three_font_multiplier = heading_three_font_multiplier | minus: 0.2
  elsif heading_font_multiplier >= 2.0
    assign heading_two_font_multiplier = heading_two_font_multiplier | minus: 0.5
    assign heading_three_font_multiplier = heading_three_font_multiplier | minus: 0.75
  endif
%}
{% style %}
  {% # Loads all font variantions with display: swap %}
  {{ settings.base_font | font_face: font_display: 'swap' }}
  {{ settings.base_font | font_modify: 'weight', 'bold' | font_face: font_display: 'swap' }}
  {{ settings.base_font | font_modify: 'weight', 'bold' | font_modify: 'style', 'italic' | font_face: font_display: 'swap' }}
  {{ settings.base_font | font_modify: 'style', 'italic' | font_face: font_display: 'swap' }}
  {{ settings.heading_font | font_face: font_display: 'swap' }}
  {{ settings.heading_font | font_modify: 'weight', 'bold' | font_face: font_display: 'swap' }}
  {{ settings.heading_font | font_modify: 'weight', 'bold' | font_modify: 'style', 'italic' | font_face: font_display: 'swap' }}
  {{ settings.heading_font | font_modify: 'style', 'italic' | font_face: font_display: 'swap' }}

  :root {
    /* typography */
    --base-font: {{ settings.base_font.style }} {{ settings.base_font.weight }} {{ settings.base_font_size }}px/1.5 {{ settings.base_font.family }}, {{ settings.base_font.fallback_families }};
    --base-font-size: {{ settings.base_font_size }};
    --heading-one-font: {{ settings.heading_font.style }} {{ settings.heading_font.weight }} calc({{ settings.base_font_size }}px * {{ heading_one_font_multiplier }})/1.5 {{ settings.heading_font.family }}, {{ settings.heading_font_font.fallback_families }};
    --heading-one-font-style: {{ settings.heading_font.style }};
    --heading-one-font-weight: {{ settings.heading_font.weight }};
    --heading-one-font-size: calc({{ settings.base_font_size }}px * {{ heading_one_font_multiplier }});
    --heading-one-font-line-height: 1.5;
    --heading-one-font-family: {{ settings.heading_font.family }}, {{ settings.heading_font_font.fallback_families }};
    --heading-two-font: {{ settings.heading_font.style }} {{ settings.heading_font.weight }} calc({{ settings.base_font_size }}px * {{ heading_two_font_multiplier }})/1.5 {{ settings.heading_font.family }}, {{ settings.heading_font_font.fallback_families }};
    --heading-two-font-style: {{ settings.heading_font.style }};
    --heading-two-font-weight: {{ settings.heading_font.weight }};
    --heading-two-font-size: calc({{ settings.base_font_size }}px * {{ heading_two_font_multiplier }});
    --heading-two-font-line-height: 1.5;
    --heading-two-font-family: {{ settings.heading_font.family }}, {{ settings.heading_font_font.fallback_families }};
    --heading-three-font: {{ settings.heading_font.style }} {{ settings.heading_font.weight }} calc({{ settings.base_font_size }}px * {{ heading_three_font_multiplier }})/1.5 {{ settings.heading_font.family }}, {{ settings.heading_font_font.fallback_families }};
    --heading-three-font-style: {{ settings.heading_font.style }};
    --heading-three-font-weight: {{ settings.heading_font.weight }};
    --heading-three-font-size: calc({{ settings.base_font_size }}px * {{ heading_three_font_multiplier }});
    --heading-three-font-line-height: 1.5;
    --heading-three-font-family: {{ settings.heading_font.family }}, {{ settings.heading_font_font.fallback_families }};
    /* colors */
    --background-color: {{ settings.color_scheme.settings.background }};
    --background-gradient: {{ settings.color_scheme.settings.background_gradient }};
    --text-color: {{ settings.color_scheme.settings.text }};
    --button-color: {{ settings.color_scheme.settings.button }};
    --button-label-color: {{ settings.color_scheme.settings.button_label }};
    --secondary-button-label-color: {{ settings.color_scheme.settings.secondary_button_label }};
    --shadow-color: {{ settings.color_scheme.settings.shadow }};
    /* buttons */
    --button-border-radius: {{ settings.button_border_radius }};
    --input-border-radius: {% if settings.button_border_radius == "50%" %}0.75rem{% else %}{{ settings.button_border_radius }}{% endif %}
  }
{% endstyle %}
