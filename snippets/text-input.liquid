{% doc %}
  @param {string} name - Name attribute of the input
  @param {string} id - Id attribute of the input
  @param {string} [placeholder] - Placeholder attribute of the input
  @param {boolean} [required] - Required input, defaults false
  @param {string} [custom_attributes] - Additional attributes to add to the input element
  @param {string} [custom_class] - Additional custom classes
{% enddoc %}
<input
  type="text"
  class="px-4 py-2 {{ custom_class }}"
  {% if id != blank %}
    id="{{ id }}"
  {% endif %}
  {% if name != blank %}
    name="{{ name }}"
  {% endif %}
  {% if placeholder != blank %}
    placeholder="{{ placeholder }}"
  {% endif %}
  {% if required != blank %}
    required="false"
  {% endif %}
  {{ custom_attributes }}
>
