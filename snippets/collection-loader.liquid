{% doc %}
  @description collection grid loader

  @param {number} [total_items] - total number of items, defaults 30
{% enddoc %}
{% liquid
  if total_items == blank
    assign total_items = 30
  endif
%}
<collection-section class="max-w-[90%] lg:{{ settings.container_width }} mx-auto grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 place-items-center gap-3">
  {%- for i in (1..total_items) -%}
    {%- render 'card-loader' -%}
  {%- endfor -%}
</collection-section>
