{% doc %}
  @description Card element for product cards and blog cards in the collection list page

  @param {object} product - product
{% enddoc %}

<div class="p-3 shadow-sm rounded-md max-w-[600px]">
  <a href="{{ product.url }}" class="inline-flex flex-col gap-2">
    {{ product.featured_image | image_url: width: 600, height: 600 | image_tag: alt: product.title }}
    <span class="inline-flex flex-col gap-1">
      <h3>{{ product.title }}</h3>
      {% if product.price != blank %}
        <span>{{ product.price | money }}</span>
      {% endif %}
    </span>
  </a>
  {% render 'button', button_type: "button", text: "Add To Cart" %}
</div>
