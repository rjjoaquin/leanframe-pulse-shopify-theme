<div class="{{ settings.container_width }} mx-auto">
  <h2>All Snippets</h2>
  <div class="flex gap-3 flex-col">
    <h3>Icons</h3>
    <div class="flex gap-3">
      {% render 'icon', name: 'cart', size: 'lg' %}
      {% render 'icon', name: 'alert', size: 'lg' %}
      {% render 'icon', name: 'menu', size: 'lg' %}
    </div>
  </div>
  <div class="flex gap-3 flex-col">
    <h3>Button</h3>
    {% render 'button', button_type: 'button', text: 'This is a regular button' %}
    {% render 'button', button_type: 'url', text: 'This is a link button' %}
    <form>{% render 'button', button_type: 'submit', text: 'This is a submit button' %}</form>
  </div>
</div>

{% schema %}
{
  "name": "All Snippets",
  "presets": [
    {
      "name": "All Snippets"
    }
  ]
}
{% endschema %}
